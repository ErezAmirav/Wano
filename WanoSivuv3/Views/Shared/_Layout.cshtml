<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WanoSivuv3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/homepage.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="js/jquery-2.1.4.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)


</head>
<body>
    <!--שורת שליטה למעלה-->

    <header>
        <nav>
            <div class="logo">
                <a href="index.html"><img src="https://i.ibb.co/rFjCZMF/wanologosmall.png" alt="Wano Logo"></a>
            </div>
            <div class="toggle">
                <span class="first"></span>
                <span class="middle"></span>
                <span class="last"></span>
            </div>
            <div class="navigation-bar">
                <ul>
                    <li class="active"><a href="/Home/Index">Home<span class="underline"></span></a></li>
                    <li><a href="/Home/Reservation">Reservation<span class="underline"></span></a></li>
                    <li><a href="/Home/Menu">Menu<span class="underline"></span></a></li>
                    <li><a href="/Home/Gallery">Gallery<span class="underline"></span></a></li>
                    <li><a href="/Home/About">About<span class="underline"></span></a></li>
                    <li><a href="/Home/Contact_us">Contact<span class="underline"></span></a></li>
                    @if (Context.User.IsInRole("Admin"))
                    {
                        <li><a asp-controller="Products" asp-action="Index">Products</a></li>
                    }
                    @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                    {
                        <li><a asp-controller="Users" asp-action="Logout">Logout</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a asp-controller="Users" asp-action="Login">Login</a></li>
                    }
                </ul>

            </div>
        </nav>
    </header>

    <div class="contain">
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    </div>
</body>
</html>
<!--שורת שליטה למטה-->
<footer>
    <div class="text">
        <h2>WANO</h2>
        <div><i class="fas fa-asterisk"></i></div>
    </div>
    <div class="contact-container">
        <div class="social-media">
            <h3>Follow Along</h3>
            <div class="links">
                <a href="#"><i class="fab fa-twitter"></i></a>
                <a href="#"><i class="fab fa-facebook-square"></i></a>
                <a href="#"><i class="fab fa-pinterest"></i></a>
                <a href="#"><i class="fab fa-linkedin-in"></i></a>
            </div>
        </div>
        <div class="newsletter">
            <h3>NewsLetter</h3>
            <form method="post">
                <input type="email" name="email" placeholder="Type Your Email">
                <i class="fas fa-envelope"></i>
            </form>
        </div>
    </div>
</footer>
<div class="copyright">
    
    <ul class="info">
        <li>&copy; WANO 2021</li>
        <li>13 Allenby St. at Rothschild Blvd, Tel-Aviv</li>
        <li>Tel: 039666666</li>
    </ul>
    <ul class="CTA">
        <li><a href="#">PERMISSIONS AND COPYRIGHT</a></li>
        <li><a href="#">CONTACT THE TEAM</a></li>
    </ul>
</div>


