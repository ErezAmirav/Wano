@model IEnumerable<WanoSivuv3.Models.Product>

@{
    ViewData["Title"] = "Menu";
}
<head>
    <link rel="stylesheet" href="~/css/menu.css">
</head>

<h1>Welcome to Wano-Sushi menu</h1>

<form asp-action="Search">
    <input name="query" placeholder="Search" />
    <input type="submit" value="Search" class="btn btn-primary" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Desc)
                </td>
                <th>
                    @Html.DisplayNameFor(modelItem => item.Category.Name)
                </th>
                <td>

                    <div class="container">
                        <div class="row">
                            <div id="productIdo" class="card text-center">
                                <img src="@item.Image" width="100" />
                                <div class="card-body">
                                    @*<p class="text-center">@item.Name</p>*@   <!-- don't need the item name on the picture -->
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
